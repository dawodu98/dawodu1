pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Check out the code from your version control system (e.g., Git)
                checkout scm
            }
        }
        
        
        stage('Test') {
            steps {
                // Run your Python tests (replace 'test.py' with your test script)
                sh 'python test.py'
            }
        }
        
        stage('Cleanup') {
            steps {
                // Deactivate the virtual environment and remove it
                sh 'deactivate'
                sh 'rm -rf venv'
            }
        }

    

    }
}
