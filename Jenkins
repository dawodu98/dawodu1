pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // This step checks out your code from your version control system (e.g., Git)
                checkout scm
            }
        }
  
        stage('Test') {
            steps {
                // This step runs your Python tests
                sh 'python -m unittest discover tests'
            }
        }
        
        stage('Deploy') {
            steps {
                // This step deploys your Python application (e.g., to a server)
                sh 'python deploy.py'
            }
        }
    
    
    post {
        success {
            // This block runs if the pipeline succeeds
            echo 'Pipeline succeeded! Your Python application is ready for deployment.'
        }
        failure {
            // This block runs if the pipeline fails
            echo 'Pipeline failed! Check the build and test stages for issues.'
        }
    }
}
}
