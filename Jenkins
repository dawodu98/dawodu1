pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // This step checks out your code from your version control system (e.g., Git)
                checkout scm
            }
        }
  
        stage('Test') {
            steps {
                // This step runs your Python tests
                sh 'python -m unittest discover tests'
            }
        }
        
        stage('Deploy') {
            steps {
                // This step deploys your Python application (e.g., to a server)
                sh 'python deploy.py'
            }
        }
    
    

}
}
